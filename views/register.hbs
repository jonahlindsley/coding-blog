<div
  class="card
          align
          mx-4
          mt-4
          bg-secondary bg-gradient
          text-white
          customCard"
>
  <div class="card-body">
    <h3 class="card-title">Sign Up</h3>
    <hr />

    <form id="signup-form" class="card-body">
      <label class="form-label" for="username-signup">Username</label>
      <br />
      <div class="input-group mb-3">
        <input
          id="username-signup"
          type="text"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <label class="form-label" for="password-signup">Password</label>
      <br />
      <div class="input-group mb-3">
        <input
          id="password-signup"
          type="password"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary fs-5">Sign Up!</button>
      </div>
      <br />
      <a class="login-link text-decoration-none" href="/login">Log in instead</a>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>