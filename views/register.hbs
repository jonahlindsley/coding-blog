<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">register a new user</span>
                <p>to register a new user please enter your email and a password</p>
            </div>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s6">
                            <i class="material-icons prefix email">email</i>
                            <input id="icon_telephone" type="email" class="validate">
                            <label for="icon_telephone">email</label>
                        </div>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">security</i>
                        <input id="icon_prefix" type="text" class="validate">
                        <label for="icon_prefix">password</label>
                    </div>
                </form>
            </div>
            <div class="card-action">
                <a href="homepage">login</a>
                <a href="/">home</a>
            </div>
        </div>
    </div>
</div>